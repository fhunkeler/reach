{
  "name": "reach",
  "description": "Create apps using WebRTC with Webcom",
  "main": "dist/reach.js",
  "scripts": {
    "prebuild": "rm -rf dist && mkdir -p dist",
    "lint": "gulp lint",
    "test:unit": "gulp test:unit --once",
    "test:coverage": "npm run test:unit -- --coverage",
    "build": "gulp build:debug && build:release",
    "prepublish-dist": "npm run build",
    "publish-dist": "npm run build && publish-dist --author-name \"Webcom\" --author-email \"webcom.ops@orange.com\"",
    "semantic-release": "semantic-release pre && npm run publish-dist && npm publish && semantic-release post"
  },
  "keywords": [
    "signaling",
    "webcom",
    "realtime",
    "webrtc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webcom-components/reach.git"
  },
  "author": "Webcom <webcom.ops@orange.com>",
  "license": "MIT",
  "dependencies": {
    "webcom": "~0.2.2"
  },
  "devDependencies": {
    "adapterjs": "^0.12.1",
    "babel": "^5.8.23",
    "babel-core": "^5.8.25",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.3.2",
    "babel-runtime": "^5.8.25",
    "babelify": "^6.3.0",
    "browser-sync": "^2.9.7",
    "browserify": "^11.2.0",
    "bundle-collapser": "^1.2.1",
    "cz-conventional-changelog": "^1.1.4",
    "ghooks": "^1.0.1",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-data": "^1.2.0",
    "gulp-eslint": "^1.0.0",
    "gulp-replace": "^0.5.4",
    "gulp-size": "^2.0.0",
    "gulp-swig": "^0.7.4",
    "gulp-uglify": "^1.4.1",
    "gulp-util": "^3.0.6",
    "isparta-loader": "^1.0.0",
    "jasmine": "^2.3.2",
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.10",
    "karma-browserify": "^4.3.0",
    "karma-chrome-launcher": "^0.2.2",
    "karma-coverage": "^0.5.2",
    "karma-firefox-launcher": "^0.1.7",
    "karma-jasmine": "^0.3.6",
    "karma-jasmine-html-reporter": "^0.1.8",
    "karma-junit-reporter": "^0.3.7",
    "karma-sauce-launcher": "^0.3.0",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webdriver-launcher": "^1.0.4",
    "karma-webpack": "^1.7.0",
    "lodash": "^3.10.1",
    "merge-stream": "^1.0.0",
    "minimist": "^1.2.0",
    "publish-dist": "^1.0.8",
    "require-dir": "^0.3.0",
    "selenium-grid-status": "^0.2.0",
    "semantic-release": "^4.3.5",
    "swig": "^1.4.2",
    "validate-commit-msg": "^1.0.0",
    "vinyl": "^1.0.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "webpack": "^1.12.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm run test:unit"
    }
  }
}
